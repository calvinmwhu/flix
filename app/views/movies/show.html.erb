<article>
  <header>
    <h1><%= @movie.title %></h1>
  </header>
  <p><%= truncate(@movie.description, length: 20, separator: ' ') %> </p>
  <table>
    <tr>
      <th>Rating</th>
      <td><%= @movie.rating %></td>
    </tr>
    <tr>
      <th>Total Gross</th>
      <td>
        <%= format_total_gross(@movie) %>
      </td>
    </tr>
    <tr>
      <th>Released On</th>
      <td><%= @movie.released_on.to_s(:released_on) %></td>
      <td>(<%= time_ago_in_words(@movie.released_on) %> ago)</td>
    </tr>
  </table>
</article>

<nav>
  <h2><%= link_to("All Movies", root_path) %></h2>
  <h2><%= link_to("Edit", edit_movie_path(@movie)) %></h2>
</nav>

<h1>There are <%= pluralize(@movies.size,"Movie") %> </h1>

  <% @movies.each do |movie| %>
      <article>
        <header>
          <h1><%= link_to(movie.title, movie_path(movie)) %></h1>
        </header>
        <p><%= truncate(movie.description, length: 20, separator: ' ') %> </p>
        <table>
          <tr>
            <th>Rating</th>
            <td><%= movie.rating %></td>
          </tr>
          <tr>
            <th>Total Gross</th>
            <td>
              <%= format_total_gross(movie) %>
            </td>
          </tr>
          <tr>
            <th>Released On</th>
            <td><%= movie.released_on.to_s(:released_on) %></td>
            <td>(<%= time_ago_in_words(movie.released_on) %> ago)</td>
          </tr>
        </table>
      </article>
  <% end %>

<h1><%= link_to("Add new movie", new_movie_path) %> </h1>

<%= render 'footer' %>